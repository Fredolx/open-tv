{
  "productName": "Beats TV",
  "version": "2.0.2",

  "identifier": "com.beatstv.app",
  "build": {
    "frontendDist": "../dist/open-tv/browser",
    "devUrl": "http://localhost:4200",
    "beforeDevCommand": "npm run start",
    "beforeBuildCommand": "ng build --configuration=production"
  },
  "app": {
    "windows": [
      {
        "title": "Beats TV (v2.0.0)",

        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false,
        "zoomHotkeysEnabled": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self' 'unsafe-eval' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https: http: asset: blob:; media-src *; font-src 'self' data: https:; connect-src 'self' https: http: ws: wss:;"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "wix": {
        "language": "en-US",
        "fragmentPaths": ["./windows/fragments/deps.wxs"],
        "componentGroupRefs": ["DependencyComponents"],
        "componentRefs": ["MpvComponent", "FfmpegComponent", "YtDlpComponent"]
      }
    },
    "linux": {
      "deb": {
        "depends": ["mpv", "ffmpeg", "yt-dlp"],
        "desktopTemplate": "linux/custom.desktop"
      },
      "rpm": {
        "depends": ["mpv", "ffmpeg", "yt-dlp"],
        "desktopTemplate": "linux/custom.desktop"
      }
    }
  },
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json"
}
